@{
    ViewBag.Title = "Configuración de Idioma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <i class="fas fa-language fa-2x text-primary me-3"></i>
                <h1 class="mb-0">Configuración de Idioma</h1>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Idioma / Language</h3>
                        <i class="fas fa-globe-americas"></i>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="mb-3">
                        <div id="google_translate_element" class="w-100"></div>
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Nota:</strong> Selecciona tu idioma preferido / Select your preferred language
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="fas fa-sync-alt me-1"></i> Los cambios se aplicarán inmediatamente / Changes will take effect immediately
                    </small>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver al inicio / Return to home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    #google_translate_element .goog-te-combo {
        width: 100% !important;
        padding: 0.5rem;
        border-radius: 4px;
        border: 1px solid #ced4da;
    }

    .goog-te-gadget {
        font-family: inherit !important;
    }

    .goog-te-gadget-simple {
        background-color: #f8f9fa !important;
        border: none !important;
        padding: 8px !important;
        border-radius: 4px !important;
    }

